{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react",
    "baseUrl": "./src",
    "paths": {
      "components": [
        "components/"
      ],
      "modals": [
        "modals"
      ],
      "types": [
        "types.ts"
      ],
      "theme": [
        "theme.tsx"
      ],
      "colors": [
        "colors.tsx"
      ],
      "utilities": [
        "utilities.tsx"
      ],
      "database": [
        "database/index.ts"
      ]
    },
  },
  "include": [
    "src",
    "electron",
    "shared"
  ], // shared doesn't seem to work in Electron
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}