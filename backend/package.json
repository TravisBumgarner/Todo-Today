{
    "name": "backend",
    "productName": "Todo Today",
    "version": "1.0.0",
    "description": "Consulting Todo List App",
    "main": "dist/index.js",
    "scripts": {
        "sd:be": "export NODE_ENV=local && concurrently \"tsc -w\" \"electron ./dist/index.js\"",
        "app:dir": "electron-builder --dir",
        "build": "rm -rf ./dist && rm -rf ./dist-electron && mkdir ./dist && mv ../react-dist/ ./dist && tsc && electron-builder"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@types/electron": "^1.6.10",
        "dotenv": "^16.0.0",
        "electron-context-menu": "^3.1.2",
        "electron-reloader": "^1.2.3",
        "typescript": "^4.6.4"
    },
    "devDependencies": {
        "electron": "^18.2.0",
        "electron-builder": "^23.0.3"
    },
    "build": {
        "appId": "com.tbumgarner.todotoday",
        "mac": {
            "category": "your.app.category.type",
            "icon": "./public/icons/mac/icon.png"
        },
        "win": {
            "icon": "./public/icons/win/icon.png"
        },
        "linux": {
            "icon": "./public/icons/linux/icon.png"
        },
        "directories": {
            "app": ".",
            "output": "dist-electron",
            "buildResources": "static"
        },
        "files": [
            "package.json",
            "./dist/**/*",
            "node_modules",
            "./public/**/*"
        ]
    }
}
